default_platform(:ios)

# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  before_all do
  
    begin
      increment_build_number(build_number: ENV["BITRISE_BUILD_NUMBER"] || 1)
    rescue => ex
      UI.error(ex)
    end

    cocoapods(
      repo_update: true
    )
  end
  
  desc "Run all lanes"
  lane :all do
    all_tests
    build
  end

  desc "Run all tests lanes"
  lane :all_tests do
    lint
    tests
  end

  desc "Lint project"
  lane :lint do
    swiftlint(
      config_file: ".swiftlint.yml",
      ignore_exit_status: true
    )
  end

  desc "Run all tests (beta)"
  lane :tests do
    scan(
      workspace: "mood-reading-machines.xcworkspace",
      scheme: "mood-reading-machines",
      device: "iPhone 8",
      clean: false
    )
  end

  desc "Build ipa"
  lane :build do
    gym(
      scheme: "mood-reading-machines",
      output_name: "MoodReadingMachines",
      output_directory: "../deploy"
    )
  end
end

